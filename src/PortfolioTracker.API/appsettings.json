{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=testdb;Username=testuser;Password=testpass;Include Error Detail=true"
  },
  "JwtSettings": {
    "Secret": "THIS_IS_A_DEMO_SECRET_KEY_1234567890",
    "Issuer": "TestIssuer",
    "Audience": "TestAudience",
    "ExpirationInMinutes": 30
  },
  "AlphaVantage": {
    "ApiKey": "YOUR_API_KEY_HERE",
    "BaseUrl": "https://www.alphavantage.co/query"
  },
  "StockDataProvider": {
    "ActiveProvider": "AlphaVantage"
  },
  "Redis": {
    "ConnectionString": "localhost:6379",
    "InstanceName": "PortfolioTracker:"
  },

  "StockDataCache": {
    "QuoteCacheDurationMinutes": 1440,
    "CompanyInfoCacheDurationDays": 180,
    "HistoricalDataCacheDurationDays": 1
  },
  "AllowedHosts": "*"
}
